<h2 class="page-header" style="color:#F5F5F5">Register</h2>
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}

<style>
   body{
       background-color: #2c3e50;
   }
</style>

<form method="post" action="/students/register" accept="image/jpeg, image/gif, image/x-png">
  <div class="form-group" style="color:#F5F5F5">
   <label>Profile Picture</label>
   <input type="file" name="pic" id="pic"><br>
  </div>
   <div class="form-group" style="color:#F5F5F5">
    <label>First Name</label>
    <input type="text" class="form-control" placeholder="First Name" name="firstName">
  </div>
  <div class="form-group" style="color:#F5F5F5">
   <label>Last Name</label>
   <input type="text" class="form-control" placeholder="Last Name" name="lastName">
 </div>
  <div class="form-group" style="color:#F5F5F5">
    <label>Username</label>
    <input type="text" class="form-control" placeholder="Username" name="username">
  </div>
   <div class="form-group" style="color:#F5F5F5">
    <label>Email</label>
    <input type="email"  class="form-control" placeholder="Email" name="email">
  </div>
  <div class="form-group" style="color:#F5F5F5">
    <label>Password</label>
    <input type="password" class="form-control" placeholder="Password" name="password">
  </div>
  <div class="form-group" style="color:#F5F5F5">
    <label>Confirm Password</label>
    <input type="password" class="form-control" placeholder="Password" name="password2">
  </div>
  <button type="submit" class="btn btn-default">
  <span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>Register</button>
</form>
